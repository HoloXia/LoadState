<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 单独的MaterialButton样式-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTintMode">src_atop</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">10dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
    </style>

    <!-- 单独的MaterialButton样式-->
    <style name="UnElevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTintMode">src_atop</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">10dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="TabStyle">
        <item name="tabBackground">@color/transParent</item>
        <!--        <item name="tabIndicator">@drawable/tab_indicator_home</item>-->
        <item name="tabIndicatorColor">?colorPrimaryVariant</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabRippleColor">@color/transParent</item>
        <item name="tabTextColor">@color/textSecond</item>
        <item name="android:textSize">16sp</item>
        <item name="tabSelectedTextColor">?colorPrimaryVariant</item>
    </style>

    <!-- TabLayout字体自定义 -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>